<!DOCTYPE html>
<html>
  <head>
    <title>Directory Users</title>
    <link rel="stylesheet" href="/public/stylesheets/directory_style.css" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Inter"
    />
  </head>
  <body>
    <h1 class="page-title">All SCIM-Provisioned Users</h1>

    <!-- views/directory.ejs -->
    <div class="users-grid">
      <% users.forEach(u => { %>
      <div class="user-card">
        <% if (u.photoUrl) { %>
        <img
          class="user-avatar"
          src="<%= u.photoUrl %>"
          alt="<%= u.first_name %> <%= u.last_name %>"
        />
        <% } else { %>
        <div class="user-avatar">
          <%= u.first_name.charAt(0) %><%= u.last_name.charAt(0) %>
        </div>
        <% } %>
        <h2 class="user-name"><%= u.first_name %> <%= u.last_name %></h2>
        <a href="mailto:<%= u.email %>" class="user-email"> <%= u.email %> </a>
      </div>
      <% }) %>
    </div>

    <p class="back-home">
      <a href="/">‚Üê back home</a>
    </p>
  </body>
</html>
